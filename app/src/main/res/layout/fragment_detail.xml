<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.udacity.movie.fragment.DetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_title_height"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="@dimen/title_size"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/normal_spacing"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="@dimen/detail_poster_width"
                android:layout_height="@dimen/detail_poster_height"
                android:layout_margin="@dimen/normal_spacing"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_movie_release_date"
                style="@style/TextViewBody2Style"
                android:layout_toRightOf="@id/iv_movie_poster"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tv_movie_vote_count"
                style="@style/TextViewBody2Style"
                android:layout_toRightOf="@id/iv_movie_poster"
                android:layout_below="@id/tv_movie_release_date"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_movie_popularity"
                style="@style/TextViewBody2Style"
                android:layout_toRightOf="@id/iv_movie_poster"
                android:layout_below="@id/tv_movie_vote_count" />

            <TextView
                android:id="@+id/tv_runtime"
                style="@style/TextViewBody2Style"
                android:layout_toRightOf="@id/iv_movie_poster"
                android:layout_below="@id/tv_movie_popularity"/>

            <TextView
                android:id="@+id/btn_favorite"
                style="@style/TextViewBody2Style"
                android:text="MARK AS FAVORITE"
                android:layout_toRightOf="@id/iv_movie_poster"
                android:layout_below="@id/tv_runtime"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Videos"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Reviews"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>